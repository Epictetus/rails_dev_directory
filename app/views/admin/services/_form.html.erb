<% form_for [:admin, @service] do |f| -%>
  
  <%= f.error_messages %>

  <fieldset>
    <%- if @service.service_category_id.nil? -%>
      <%= f.label :service_category_id, t('service.category') %>
      <%= f.select :service_category_id, ServiceCategory.options_for_select, :include_blank => true %> <br/>
    <%- else -%>
      <%= f.hidden_field :service_category_id %>
    <%- end -%>
    <%= f.label :name, t("service.name") %> <%= f.text_field :name %> <br />
    <%= f.label :checked, t("service.checked") %> <%= f.check_box :checked %> <br />
    <%= f.label :priority, t("priority") %> <%= f.text_field :priority %> <em><%= t('priority_notes') %></em><br />
  </fieldset>

  <%= f.submit t('forms.save') %> <%= t('forms.or') %>
  <%= link_to t('forms.cancel'), admin_services_path %>
<% end -%>
