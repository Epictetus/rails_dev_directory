<% form_for [:admin, @question] do |f| -%>

  <%- setup_question(@question) -%>
  
  <%= f.error_messages %>
  
  <fieldset>
    <%= f.label :quiz_id, t('question.quiz') %>
    <%= f.select :quiz_id, Quiz.options_for_select %> <br/>
    <%= f.label :text, t("question.text") %> <%= f.text_area :text %> <br/>

    <%- index = 1 -%>
    <%- f.fields_for :answers do |a| -%>
      <%= a.label :text, "Answer #{index}" %>
      <%= a.text_area :text %> <br/>
      <%= a.label :correct, "Answer #{index} is correct" %> <%= a.check_box :correct %> <br/>
      <%- index += 1 -%>
    <%- end -%>
  </fieldset>
  
  <%= f.submit t('forms.save') %>
<% end -%>
