<h2><%= t('provider.directory_headline') %></h2>

<p class="description"><%= t('provider.directory_description') %></p>

<% form_tag search_providers_path, :method => :get, :id => "search-form" do -%>
  <%= label_tag 'budget', t('provider.directory.budget') %>
  <%= text_field_tag 'budget' %>
  <br />
  <%= label_tag 'hourly_rate', t('provider.hourly_rate') %>
  <%= text_field_tag 'hourly_rate', '', :class => "number" %>
  
  <span class="note"><%= t('provider.directory.note') %></span><br/>
  
  <%= label_tag 'location', t('provider.directory.location') %> <%= location_select %><br/>
  <label><%= t('provider.directory.services') %></label>
  <ul>
    <li>
      <%= image_tag '/images/icon-check.png', :class=>"check"%>
      <%= t('provider.directory.default_service') %>
    </li>
    <%- @services.group_by(&:category).each do |category, services| -%>
      <li>
        <label><%= category.name %></label>
        <ul>
          <%- services.each do |service| -%>
            <li>
              <%= check_box_tag "service_ids[]", service.id, false, :id => dom_id(service) %>
              <%= label_tag dom_id(service), service.name %>
            </li>
          <%- end -%>
        </ul>
      </li>
    <%- end -%>
  </ul>
  
  <%= submit_tag t('provider.directory.find_providers') %>
<% end -%>