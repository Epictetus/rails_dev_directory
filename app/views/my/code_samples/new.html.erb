<%= render 'common_navigation' %>

<% form_for [:my, @code_sample] do |f| -%>
  <fieldset>
    <%= f.label :name, t('name_your_sample_code') %> <%= f.text_field :name %> <br />
    
    <%= f.label :code, t('paste_code_sample_here') %> <%= f.text_area :code %> <br />
  </fieldset>
  
  <%= f.submit t('review_code') %> <%= link_to t('cancel'), my_code_samples_path %>
<% end -%>