<div class="panel">
  <%= render 'common_navigation' %>
  <div class="narrow">
    <h3><%= @code_sample.name %></h3>

    <div class="code">
      <pre><%= @code_sample.code %></pre>
    </div>

    <div class="tests">
      <p>Score: <%= @code_sample.score %></p>
    </div>
  </div>
  <div class="sidebar">
    <h3>Your code will be run against these tests:</h3>
    <ul class="testList">
      <li>Reek <%= @code_sample.reek_result %></li>
      <li>Flay <%= @code_sample.flay_result %></li>
      <li>Flog <%= @code_sample.flog_result %></li>
      <li>Roodi <%= @code_sample.roodi_result %></li>
      <li>Saikuro <%= @code_sample.saikuro_result %></li>
      <li class="score">Score</li>
    </ul>
  </div>
  <div class="clear"></div>
</div>