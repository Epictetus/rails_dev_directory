<div class="panel">
  <div class="pageHead">
    <h2><%= t('quizzes') %></h2>
  </div>

  <%- if @quizzes.empty? -%>
    <p><%= t('no_quizzes') %></p>
  <%- else -%>
    <table>
      <thead>
        <tr>
          <th><%= t('quiz_name') %></th>
          <th><%= t('skill_level') %></th>
          <th class="hidden"><%= t('time_limit') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <%- @quizzes.each do |quiz| -%>
        <tr>
          <td><%= quiz.name %></td>
          <td><%= quiz.skill_level %></td>
          <td class="hidden"><%= quiz.time_limit %> <%= t('minutes') %></td>
          <td>
            <%- if current_user.provider.quiz_results.find_by_quiz_id(quiz.id) -%>
              <%= t('your_score') %>: <%= current_user.provider.quiz_results.find_by_quiz_id(quiz.id).score %> / <%= quiz.questions.count %>
              <%= link_to t('retake_quiz'), take_my_quiz_path(quiz) %>
            <%- else -%>
              <%= link_to t('take_this_quiz'), take_my_quiz_path(quiz) %>
            <%- end -%>
          </td>
        </tr>
      <%- end -%>
      </tbody>
    </table>
  <%- end -%>

</div>